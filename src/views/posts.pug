doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title 秘密の匿名掲示板
  body
  h1 秘密の匿名掲示板
  a(href="/logout") ログアウト
  h2 新規投稿
  form(method="post" action="/posts")
    div
      textarea(name="content" cols=40 rows=4)
    div
      button(type="submit") 投稿

  h2 投稿一覧
  each post in posts
    if post.postedBy === 'admin'
      h3 #{post.id}. 管理人★
    else if post.trackingCookie
      h3 #{post.id}. ID: #{post.trackingCookie}
    else
      h3 #{post.id}
    p!= post.content ? post.content.replace(/\n/g, '<br>') : ''
    - const isAdmin = user === 'admin'
    if isAdmin
      p 投稿者: #{post.postedBy}
    p 投稿日時: #{post.createdAt}
    if user === post.postedBy || isAdmin
      form(method="post" action="/posts?delete=1")
        input(type="hidden" name="id" value=post.id)
        button(type="submit") 削除
    hr
